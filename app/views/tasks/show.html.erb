<h2 align="center">Title: <%= @task.title %></h2>

<div class="panel panel-default col-xs-6 col-xs-offset-3"><br>
  <%= link_to 'Back', tasks_path, class: "btn btn-xs btn-default" %>
  <%= link_to "Edit", edit_task_path(@task), class: "btn btn-xs btn-default" %>
  <%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-default" %>
  <hr>
  <div class="inline">
    <h4 class="center"><strong>Due:</strong></h4>
  </div>
  <div class="inline">
 <%= simple_format(@task.due) %>
</div>
</div>
