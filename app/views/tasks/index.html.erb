<% @task.each do |task| %>

 <div class="row">
  <div class="col-xs-6 col-xs-offset-3 task">
    <div class="inline">
      <div class="">
        <%= link_to "Edit", edit_task_path(task), class: "btn btn-xs btn-default" %></div><br>
     <div class="">
       <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-default" %>
     </div>
    </div>
   <div class="inline">
    <div class="article-title ">
     <%= link_to task.title, task_path(task) %>
    </div>
    <div class="article-body">
      <p class="DUE">Due: <%= task.due %></p>
    </div>
   </div>
   <div class="">
     <div class="article-body">
     <p class="tit">About: </p> <%= truncate(task.info, length: 100) %>
    </div>
    <div class="article-body">
      <p class="tit ">Progress:</p>
    <%= truncate(task.progress, length: 100) %>
   </div>
   </div>
   <hr>
   <div class="article-meta-details">
           <small>Created by: <%= task.user.username if task.user %>,
                     <%= time_ago_in_words(task.created_at) %> ago,
                     last updated: <%= time_ago_in_words(task.updated_at) %> ago</small>
           </div>
  </div>
 </div>
 <br>
<% end %>
