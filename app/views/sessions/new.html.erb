<h1 align="center">Login</h1>


<div class="col-xs-6 col-xs-offset-3 task">
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
<br>
 <div class="form-group">
  <div class="control-label col-sm-2">
   <%= f.label :email %>
  </div>
  <div class="col-sm-8">
   <%= f.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
  </div>
 </div>
 <div class="form-group">
  <div class="control-label col-sm-2">
   <%= f.label :password %>
  </div>
  <div class="col-sm-8">
   <%= f.password_field :password, class: "form-control",placeholder: "Enter password", autocomplete: "off" %>
  </div>
 </div>
 <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10 inline">
   <%= f.submit "Log in", class: 'btn btn-default btn-large' %>
   <%= link_to "Create an acount", signup_url, class: 'btn btn-default btn-large' %>
  </div>
  <div class="col-sm-offset-2 col-sm-10 ">
  </div>
 </div>
 <% end %>

 </div>
